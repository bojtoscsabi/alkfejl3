<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Létrehozva</th>
            <th>Név</th>
            <th style="text-align:center">Művelet</th>
        </tr>   
    </thead>
    <tbody>
        {{#each recipes as |recipe|}}
        <tr>
            <td>{{recipe.date}}</td>
            <td>{{recipe.name}}</td>
            <td align="center">
                {{link-to "Megtekintés" "recipes.view" recipe class="btn btn-info btn-sm"}}
                {{link-to "Szerkesztés" "recipes.edit" recipe class="btn btn-success btn-sm"}}
                <button {{action "deleteRecipe" recipe}} class="btn btn-danger btn-sm">Törlés</button>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
